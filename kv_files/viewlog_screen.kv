# kv_files/viewlog_screen.kv
<ViewLogScreen>:
    name: "viewlog"
    MDBoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "20dp"
        md_bg_color: 1, 1, 1, 1

        MDLabel:
            text: "WellLog Insight"
            halign: "center"
            font_style: "H5"
            bold: True
            size_hint_y: None
            height: "40dp"

        MDLabel:
            id: info_label
            text: "Well Name:\nLocation:\nDepth Range:"
            halign: "left"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            size_hint_y: None
            height: "60dp"

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            
            BoxLayout:
                id: box_area
                orientation: "horizontal"
                size_hint_y: None
                height: self.minimum_height
                spacing: "5dp"
                canvas.before:
                    Color:
                        rgba: 0.95, 0.95, 0.95, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

        MDBoxLayout:
            orientation: "horizontal"
            spacing: "10dp"
            size_hint_y: None
            height: "50dp"

            MDRaisedButton:
                text: "Save as PDF"
                md_bg_color: 0.0, 0.48, 0.82, 1
                on_release: app.save_as_pdf()

            MDRaisedButton:
                text: "Interpret Log"
                md_bg_color: 0.0, 0.48, 0.82, 1
                on_release: app.open_interpretation()

            MDFlatButton:
                text: "Back"
                text_color: 0, 0, 0, 1
                on_release: app.change_screen("welllog")