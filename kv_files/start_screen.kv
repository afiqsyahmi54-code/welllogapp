# kv_files/start_screen.kv
<StartScreen>:
    name: "start"
    MDBoxLayout:
        orientation: "vertical"
        spacing: "20dp"
        padding: "40dp"
        md_bg_color: 1, 1, 1, 1

        Widget:

        Image:
            source: "assets/1.png"
            size_hint_y: None
            height: "380dp"
            allow_stretch: True
            keep_ratio: True

        MDLabel:
            text: "WellLog Insight"
            halign: "center"
            font_style: "H5"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1
            bold: True

        MDLabel:
            text: "Interpret your well data"
            halign: "center"
            font_style: "Subtitle1"
            theme_text_color: "Custom"
            text_color: 0.3, 0.3, 0.3, 1

        Widget:

        MDRaisedButton:
            text: "Get Started"
            md_bg_color: 0.0, 0.48, 0.82, 1
            pos_hint: {"center_x": 0.5}
            size_hint_x: 0.6
            on_release: app.root.current = "welllog"

        Widget: